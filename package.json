{
  "name": "botpress",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "build": "turbo build && pnpm -w install",
    "bump": "depsyncy bump && pnpm -w install",
    "test": "pnpm vitest --run",
    "check:bplint": "pnpm -r --stream check:bplint",
    "check:dep": "depsyncy check",
    "check:format": "prettier --check .",
    "check:eslint": "eslint ./ --ext .ts --ext .tsx",
    "check:lint": "pnpm run check:bplint && pnpm run check:eslint",
    "check:type": "pnpm -r --stream check:type",
    "fix:dep": "depsyncy sync",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --fix ./ --ext .ts --ext .tsx",
    "check": "pnpm check:dep && pnpm check:format && pnpm check:lint && pnpm check:type",
    "fix": "pnpm fix:dep && pnpm fix:lint"
  },
  "dependencies": {
    "@botpress/cli": "workspace:*",
    "@botpress/sdk": "workspace:*",
    "@bpinternal/depsyncy": "^0.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^2.8.8",
    "turbo": "^1.10.3",
    "vitest": "^0.30.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "typescript": "^4.9.5"
  }
}
